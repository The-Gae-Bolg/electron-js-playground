{
  "name": "code-play-js",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --exec electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "javascript",
    "playground",
    "repl"
  ],
  "author": "",
  "license": "ISC",
  "description": "Un playground de JavaScript con Electron que muestra resultados en tiempo real",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.codeplay.js",
    "productName": "CodePlay JS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    }
  }
}
